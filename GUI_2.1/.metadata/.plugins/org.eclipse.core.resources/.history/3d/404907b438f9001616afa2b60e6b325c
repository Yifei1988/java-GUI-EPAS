		btnJa.setOnAction(new EventHandler<ActionEvent>() {// 赋值massVorschlag并关闭DialogMassnahme
			@Override
			public void handle(ActionEvent event) {
				massVorschlag = new ArrayList<String>();
/*				InterfaceController.F1_MaList.clear();//在关闭对话框前初始化5个静态字符串MaList
				InterfaceController.F2_MaList.clear();
				InterfaceController.F3_MaList.clear();
				InterfaceController.F4_MaList.clear();
				InterfaceController.F5_MaList.clear();*/
				
				if (InterfaceController.fehlerart1 != null) {
					getInfoToString(tree1,1);
				}
				if (InterfaceController.fehlerart2 != null) {
					getInfoToString(tree2,2);
				}
				if (InterfaceController.fehlerart3 != null) {
					getInfoToString(tree3,3);
				}
				if (InterfaceController.fehlerart4 != null) {
					getInfoToString(tree4,4);
				}
				if (InterfaceController.fehlerart5 != null) {
					getInfoToString(tree5,5);
				}
				
				System.out.println(MaList_F1);
				
/*				InterfaceController.F1_MaList = MaList_1;
				MaList_1.clear();
				InterfaceController.F2_MaList = MaList_2;
				MaList_2.clear();
				InterfaceController.F3_MaList = MaList_3;
				MaList_3.clear();
				InterfaceController.F4_MaList = MaList_4;
				MaList_4.clear();
				InterfaceController.F5_MaList = MaList_5;
				MaList_5.clear();
				
				System.out.println(InterfaceController.F1_MaList);*/
				
				//有没有与另一处操作合并的可能????
				String s = massVorschlag.toString();
				s = s.replace("[", "");// 把ArrayList转换为字符串时系统自动添加的[符号去除
				s = s.replace("]", "");// 把ArrayList转换为字符串时系统自动添加的]符号去除
				String[] arrayMV = s.split("Yifei, ");
				arrayMV[arrayMV.length - 1] = arrayMV[arrayMV.length - 1].replace("Yifei", "");

				InterfaceController.massVorschlagForTxt = new String[arrayMV.length];//确定数组长度并实例化
				for(int i=0; i<arrayMV.length;i++){
					InterfaceController.massVorschlagForTxt[i] = arrayMV[i];
				}//把数组字符串massVorschlag的内容赋值给数组massVorschlagForTxt，用于打印出.txt
